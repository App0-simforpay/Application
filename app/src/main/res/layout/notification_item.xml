<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size72"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgNoti"
        android:layout_width="@dimen/size24"
        android:layout_height="@dimen/size24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/main" />

    <TextView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgNoti"
        app:layout_constraintBottom_toTopOf="@id/sub"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="@dimen/size32"
        android:fontFamily="@font/nanumbarungothic_bold" />

    <TextView
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main"
        app:layout_constraintLeft_toRightOf="@id/imgNoti"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/size8"
        android:layout_marginLeft="@dimen/size32"
        android:textSize="@dimen/font12" />
    
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="@dimen/size24"
        android:layout_height="@dimen/size24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>