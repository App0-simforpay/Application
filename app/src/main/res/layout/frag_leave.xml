<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layLeave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size16"
        android:layout_marginRight="@dimen/size16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icWH"
            android:layout_height="@dimen/icWH"
            android:layout_marginTop="@dimen/size32"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size24"
            android:fontFamily="@font/nanumbarungothic_bold"
            android:text="회원탈퇴"
            android:textSize="@dimen/font24"
            app:layout_constraintBottom_toTopOf="@id/leave_txt1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBack" />

        <TextView
            android:id="@+id/leave_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size8"
            android:fontFamily="@font/nanumbarungothic"
            android:text="아래 내용을 읽고 동의해주세요."
            android:textSize="@dimen/font16"
            app:layout_constraintBottom_toTopOf="@id/leave_txt2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/leave_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size40"
            android:fontFamily="@font/nanumbarungothic_bold"
            android:text="Simfor Pay 회원 탈퇴 안내"
            android:textSize="@dimen/font18"
            app:layout_constraintBottom_toTopOf="@id/leave_txt3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leave_txt1" />

        <TextView
            android:id="@+id/leave_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:fontFamily="@font/nanumbarungothic"
            android:lineSpacingExtra="@dimen/size6"
            android:text="· 회원 탈퇴한 계정의 Simfor Pay 서비스 이용 기록은\n   모두 삭제되며, 삭제된 데이터는 복구가 불가능 합니다."
            android:textSize="@dimen/font14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leave_txt2" />

        <TextView
            android:id="@+id/leave_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:fontFamily="@font/nanumbarungothic"
            android:lineSpacingExtra="@dimen/size6"
            android:text="· Simfor Pay 회원 탈퇴 후 재가입할 경우 탈퇴전의\n   회원정보와 계약서 정보 등은 복구되지 않습니다."
            android:textSize="@dimen/font14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leave_txt3" />

        <TextView
            android:id="@+id/leave_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:fontFamily="@font/nanumbarungothic"
            android:lineSpacingExtra="@dimen/size6"
            android:text="· 다만 다른 사용자의 계약서 정보에서는 삭제되지않고\n   비회원으로 기록되어 있습니다."
            android:textSize="@dimen/font14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leave_txt4" />

        <TextView
            android:id="@+id/leave_txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size32"
            android:fontFamily="@font/nanumbarungothic_bold"
            android:text="Simfor Pay 개인정보 삭제방침 안내"
            android:textSize="@dimen/font18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leave_txt5" />

        <TextView
            android:id="@+id/leave_txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:fontFamily="@font/nanumbarungothic"
            android:lineSpacingExtra="@dimen/size6"
            android:text="· Simfor Pay를 이용하신 회원님의 회원 정보는\n   탈퇴 즉시 삭제됩니다."
            android:textSize="@dimen/font14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leave_txt6" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/mainGray"
        android:text="탈퇴하기"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/font16"
        android:enabled="false" />

</androidx.constraintlayout.widget.ConstraintLayout>