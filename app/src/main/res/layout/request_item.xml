<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size56"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgFr"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img_profile" />

    <TextView
        android:id="@+id/frName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgFr"
        app:layout_constraintBottom_toTopOf="@+id/frId"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="@dimen/size16"
        android:fontFamily="@font/nanumbarungothic_bold" />

    <TextView
        android:id="@+id/frId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frName"
        app:layout_constraintLeft_toRightOf="@id/imgFr"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/size4"
        android:layout_marginLeft="@dimen/size16"
        android:textColor="@color/dark3"
        android:textSize="@dimen/font12" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="@dimen/size56"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnDelete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/size8"
        android:text="확인"
        android:textSize="@dimen/font10" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/size56"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="삭제"
        android:textColor="@color/dark3"
        android:textSize="@dimen/font10"
        android:backgroundTint="@color/dark4" />

</androidx.constraintlayout.widget.ConstraintLayout>