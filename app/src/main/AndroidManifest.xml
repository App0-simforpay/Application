<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app0.simforpay">

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.app0.simforpay.global.sharedpreferences.MyApplication" >
        <activity android:name=".activity.SplashAct">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainAct">

        </activity>
        <activity android:name="com.app0.simforpay.activity.login.SigninAct" />
        <activity android:name="com.app0.simforpay.activity.login.PhoneAct" />
        <activity android:name="com.app0.simforpay.activity.login.SignupAct" />
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>